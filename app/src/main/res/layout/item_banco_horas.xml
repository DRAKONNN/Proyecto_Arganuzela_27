<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bt_redondo_tiempo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nombre"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/ic_usuario"
            android:drawablePadding="5dp"/>

        <TextView
            android:id="@+id/tvHoras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/horas"
            android:layout_gravity="center_vertical"
            android:textSize="25sp"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_tiempo"
            android:drawablePadding="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_editar"
                android:backgroundTint="@color/black"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="50dp"
                />

            <ImageView
                android:id="@+id/ivEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_eliminar"
                android:backgroundTint="@color/black"
                android:layout_marginRight="10dp"
                android:paddingRight="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>